# Copy this file to .env.local and fill real values.
# Next.js loads .env.local automatically (not committed).

# Resend API key (required)
RESEND_API_KEY=re_test_fake_api_key_1234567890

# Destination inbox for contact emails (required)
# The app uses CONTACT_RECIPIENT if present, otherwise falls back to SELLER_EMAIL
CONTACT_RECIPIENT=owner@example.com
SELLER_EMAIL=owner+alt@example.com

# Verified sender (optional but recommended)
# Must be a verified sender or domain in your Resend account
EMAIL_FROM="Book Catalog <noreply@yourdomain.com>"
